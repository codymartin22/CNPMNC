                </div>
                <div class="card-body">
                    <div class="button-container">
                        @if (Model.Count() == 0)
                        {
                            <h5>No external login configured</h5>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <a id="@item" class="btn btn-primary login-button" asp-action="SignIn" asp-route-provider="@item">Login with @item</a>
